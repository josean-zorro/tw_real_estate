{
  "name": "最大漲幅地區",
  "expression": [
    "",
    "",
    "VAR FilteredDistricts = ",
    "    FILTER(",
    "        SUMMARIZE(",
    "            fct_real_estate_transaction, ",
    "            fct_real_estate_transaction[city_district_surrogate_key], ",
    "            \"TotalTransactions\", [最新一個月總交易筆數], ",
    "            \"PreviousLastMonthTotalTransactions\", [最新一個月的前一月總交易筆數],",
    "            \"PriceIncrease\", [最新一個月價格變動% (MoM)]",
    "            )",
    "        ,",
    "        [TotalTransactions] >= 20 &&  -- 只篩選交易數 >= 1 的地區 ",
    "        [PreviousLastMonthTotalTransactions] >= 20",
    "    )",
    "",
    "VAR MaxIncreaseDistrict =",
    "    TOPN(",
    "        1, ",
    "         FILTER(FilteredDistricts, [PriceIncrease] >= 0), ",
    "        [PriceIncrease], DESC,  -- 找最大漲幅的地區",
    "        [TotalTransactions], DESC",
    "    )",
    "",
    "VAR SelectedDistrictKey = ",
    "    MAXX(MaxIncreaseDistrict, fct_real_estate_transaction[city_district_surrogate_key])",
    "",
    "VAR Location = ",
    "    LOOKUPVALUE(",
    "        dim_city_district[縣市 (City / County)], ",
    "        dim_city_district[city_district_surrogate_key], SelectedDistrictKey",
    "    ) ",
    "    & \" - \" & ",
    "    LOOKUPVALUE(",
    "        dim_city_district[鄉鎮市區], ",
    "        dim_city_district[city_district_surrogate_key], SelectedDistrictKey",
    "    )",
    "",
    "VAR MaxIncrease =",
    "    MAXX(MaxIncreaseDistrict, [PriceIncrease])",
    "",
    "RETURN ",
    "    \"📍 \" & Location & \" 🔺 \" & FORMAT(MaxIncrease, \"0.0%\")"
  ],
  "displayFolder": "Visual Specific - 每坪單價趨勢以及各行政區分析",
  "lineageTag": "a4d2ddac-0c00-4718-b426-b09a1da887ba",
  "annotations": [
    {
      "name": "PBI_FormatHint",
      "value": "{\"isGeneralNumber\":true}"
    }
  ]
}